<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Café da Manhã"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:id="@+id/bCafe" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:onClick="editCafe"/>
    <Button
            android:text="Pré Almoço"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:id="@+id/bPre" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bCafe" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:onClick="editPre"/>
    <Button
            android:text="Almoço"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:id="@+id/bAlmoco" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bPre" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:onClick="editAlmoco"/>
    <Button
            android:text="Lanche da Tarde"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:id="@+id/bLanche" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bAlmoco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:onClick="editLanche"/>
    <Button
            android:text="Jantar"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:id="@+id/bJantar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bLanche" android:onClick="editJantar"/>
</android.support.constraint.ConstraintLayout>